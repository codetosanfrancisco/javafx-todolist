<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<DialogPane fx:controller="com.voon.todolist.TodoItemDialogController" xmlns:fx="https://javafx.om/fxml">

    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Short Description" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="shortDescriptionField" />
            <Label text="Details: " GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextArea GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="detailsArea" />
            <Label text="Deadline: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="deadLinePicker"/>
        </GridPane>
    </content>
</DialogPane>